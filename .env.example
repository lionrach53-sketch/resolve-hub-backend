# Configuration Backend YINGRE AI

# MongoDB
MONGODB_URL=mongodb://localhost:27017/
MONGODB_DATABASE=yingre_ai

# JWT Secret (générer avec: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# Mistral AI (pour IA conversationnelle intelligente)
# Obtenez votre clé gratuite sur: https://console.mistral.ai/
MISTRAL_API_KEY=your-mistral-api-key-here

# Mode de développement
DEBUG=true

# CORS Origins (frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Port du backend
PORT=8000
